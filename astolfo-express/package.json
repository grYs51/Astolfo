{
  "name": "Astolfo-server",
  "version": "1.0.0",
  "main": "src/main.ts",
  "license": "MIT",
  "copyFiles": [
    {
      "from": "src/public/**",
      "to": "dist/src/public"
    }
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc --project tsconfig.prod.json --sourceMap",
    "postbuild": "copy-files-from-to",
    "cleanup": "rimraf coverage dist",
    "lint": "concurrently -n tsc,lint, -c \"cyan.bold,green.bold\" \"tsc --noEmit --pretty\" \"eslint --ext .js,.ts ./\"",
    "migrate": "NODE_OPTIONS='-r dotenv/config' migrate-mongo",
    "migrate:test": "MONGO_URI='mongodb://localhost/t-profile-gen-test' migrate-mongo",
    "serve": "nodemon -w ./src -r dotenv/config | pino-pretty",
    "test": "jest",
    "test:run": "jest",
    "test:ci": "jest --ci --reporters=default --reporters=jest-junit --maxWorkers=1"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-http-proxy": "^1.6.3",
    "@types/jest": "^28.1.8",
    "@types/node": "^16.11.56",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.36.0",
    "@typescript-eslint/parser": "^5.36.0",
    "concurrently": "^7.3.0",
    "dotenv": "^16.0.1",
    "dotenv-cli": "^6.0.0",
    "eslint": "^8.23.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.8.7",
    "jest": "^28.1.3",
    "jest-junit": "^14.0.0",
    "jest-watch-typeahead": "^2.1.1",
    "nodemon": "^2.0.19",
    "pino-pretty": "^9.1.0",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.1.0",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2"
  },
  "dependencies": {
    "ajv": "^8.11.0",
    "ajv-formats": "^2.1.1",
    "cors": "^2.8.5",
    "dayjs": "^1.11.6",
    "express": "^4.18.1",
    "express-async-handler": "^1.2.0",
    "express-http-proxy": "^1.6.3",
    "express-jwt": "^7.7.5",
    "http-terminator": "^3.2.0",
    "jwks-rsa": "^2.1.4",
    "migrate-mongo": "^9.0.0",
    "mockdate": "^3.0.5",
    "mongodb": "^4.9.0",
    "pino": "^8.4.2"
  }
}
